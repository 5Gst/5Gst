<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--    Previous col-->
    <LinearLayout
        android:id="@+id/block_previous"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/label_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:fontFamily="@font/futura_pt_demi"
            android:gravity="center"
            android:letterSpacing="0"
            android:maxLines="1"
            android:text="@string/empty"
            android:textAppearance="@style/Headline3"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/value_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/futura_pt_demi"
            android:text="@string/empty"
            android:textAppearance="@style/Headline4"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/caption_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/futura_pt_demi"
            android:text="@string/mbps"
            android:textAppearance="@style/Subtitle1"
            android:textColor="?android:attr/textColorPrimary" />
    </LinearLayout>

    <!--    Current col-->
    <LinearLayout
        android:id="@+id/block_current"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/label_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:fontFamily="@font/futura_pt_demi"
            android:gravity="center"
            android:letterSpacing="0"
            android:maxLines="1"
            android:text="@string/empty"
            android:textAppearance="@style/Headline3"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/value_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/futura_pt_demi"
            android:text="@string/empty"
            android:textAppearance="@style/Headline4"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/caption_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/futura_pt_demi"
            android:text="@string/mbps"
            android:textAppearance="@style/Subtitle1"
            android:textColor="?android:attr/textColorPrimary" />
    </LinearLayout>


</LinearLayout>
